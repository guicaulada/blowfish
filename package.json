{
  "name": "@sighmir/blowfish",
  "description": "Blowfish encryption in TypeScript with custom schedule",
  "version": "1.0.1",
  "author": "Guilherme Caulada",
  "license": "GPL-3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sighmir/blowfish.git"
  },
  "bugs": {
    "url": "https://github.com/Sighmir/blowfish/issues"
  },
  "homepage": "https://github.com/Sighmir/blowfish#readme",
  "scripts": {
    "start": "node dist/index.js",
    "start:example": "ts-node --no-warnings example/index.ts",
    "start:dev": "nodemon --watch src/**/*.ts --ignore src/**/*.spec.ts --exec ts-node src/index.ts",
    "test": "jest --coverage",
    "test:dev": "jest --coverage --watchAll",
    "test:staged": "jest --changedSince=HEAD --passWithNoTests",
    "test:codecov": "yarn test && ./node_modules/.bin/codecov --disable=gcov",
    "test:clean": "rm -rf ./coverage",
    "prettier:check": "prettier --list-different src/**/*.{ts,tsx}",
    "prettier:write": "prettier --write src/**/*.{ts,tsx}",
    "build": "yarn build:clean && tsc",
    "build:clean": "rm -rf ./dist",
    "lint": "eslint . --ext ts",
    "clean": "yarn build:clean && yarn test:clean && rm -rf ./node_modules"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "codecov": "^3.7.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-junit": "^11.0.1",
    "lint-staged": "^10.2.11",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "ts-loader": "^8.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "_moduleAliases": {
    "@": "./src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": ["prettier --write", "yarn lint --fix"]
  },
  "jest-junit": {
    "outputDirectory": "coverage"
  },
  "keywords": ["blowfish", "encrypt", "decrypt", "encipher", "decipher"]
}
